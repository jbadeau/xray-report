{
  "git": {
    "requireCleanWorkingDir": false,
    "addUntrackedFiles": true,
    "upstream": "master"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "VERSION",
      "out": "VERSION"
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}