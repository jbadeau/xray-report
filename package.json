{
  "name": "xray-report",
  "private": true,
  "scripts": {
    "bump": "release-it --git false",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/bumper": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "release-it": "^14.2.1"
  },
  "release-it": {
    "npm": false,
    "plugins": {
      "@release-it/bumper": {
        "in": "VERSION",
        "out": "VERSION"
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}